<Window x:Class="ChatApp.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp"
        mc:Ignorable="d"
        Title="Window2" Height="180" Width="200">
    <Grid>
                <Label Content="Enter Code To Join:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
                <TextBox x:Name="CodeTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="35,55,0,0"/>
                <Button Content="Join" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="25" Margin="100,90,0,0" Click="JoinButton_Click"/>
            </Grid>
</Window>
